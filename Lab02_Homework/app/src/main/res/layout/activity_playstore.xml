<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="6dp"
    android:weightSum="10">


    <!-- Category -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingRight="3dp"
            android:weightSum="2">

            <!--APPS-->
            <TextView
                android:layout_width="match_parent"

                android:layout_height="37dp"
                android:layout_marginBottom="3dp"
                android:background="#699f37"
                android:drawableLeft="@mipmap/android"
                android:gravity="center_vertical"
                android:text="APPS"

                android:textColor="#fefefe" />

            <!--MOVIES-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:background="#ec3b3b"
                android:drawableLeft="@mipmap/ic_movie"
                android:gravity="center_vertical"
                android:text="MOVIES"
                android:textColor="#fefefe" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="3dp"
            android:weightSum="2">

            <!--GAMES-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginBottom="3dp"
                android:background="#699f37"
                android:drawableLeft="@mipmap/ic_ctrl"
                android:gravity="center_vertical"
                android:text="GAMES"
                android:textColor="#fefefe" />

            <!--BOOKS-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginTop="3dp"
                android:background="#049be5"
                android:drawableLeft="@mipmap/ic_book"
                android:gravity="center_vertical"
                android:text="BOOKS"
                android:textColor="#fefefe" />
        </LinearLayout>
    </LinearLayout>

    <!--Racing Game Header-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="20dp"
        android:background="#eeeeee"

        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <!--Racing Games-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Racing Games"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beat the Records!"
                android:textSize="13dp" />
        </LinearLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="#699f37"
                android:paddingBottom="6dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="6dp"
                android:text="MORE"
                android:textColor="#fefefe"
                android:textSize="12dp" />

        </RelativeLayout>
    </LinearLayout>


    <!--CSR-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.65"
        android:background="#FFF"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="7dp"
            android:paddingLeft="7dp"
            android:paddingRight="20dp"
            android:paddingTop="7dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:paddingLeft="0dp"
                app:srcCompat="@drawable/csr2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="6dp"
            android:weightSum="3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <TextView
                    android:id="@+id/name1"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_weight="2"
                    android:layout_alignParentTop="true"
                    android:text="CSR Racing" />
                <ImageView
                    android:id="@+id/imageView5"

                    android:layout_width="117dp"
                    android:layout_height="26dp"
                    app:srcCompat="@mipmap/ic_more" />

            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:text="*** The best-selling drag racing series - over 100 million downloads*** "
                android:textSize="11dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="39dp"
                    app:srcCompat="@mipmap/ic_review" />
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="47dp"
                    android:text="Nutchy rate 4.5 star"
                    android:textAlignment="center"
                    android:gravity="center_vertical"

                    android:textSize="11dp" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="20dp"
        android:background="#eeeeee"

        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout

            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">
            <!--Racing Games-->
            <TextView
                android:layout_width="239dp"
                android:layout_height="wrap_content"
                android:text="New + Updated Games"
                android:textSize="18dp" />

            <TextView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:text="New recommedations every weeks!"
                android:textSize="13dp" />
        </LinearLayout>

        <RelativeLayout

            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="#699f37"
                android:paddingBottom="6dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="6dp"
                android:text="MORE"
                android:textColor="#fefefe"
                android:textSize="12dp" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4.95">

        <TextView
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:background="#FFF"
            android:gravity="bottom"
            android:paddingBottom="6dp"
            android:paddingLeft="3dp"
            android:text="UNO - Friend"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/game4" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:background="#FFF"
            android:gravity="bottom"
            android:paddingBottom="6dp"
            android:paddingLeft="3dp"
            android:text="Jumpy Witch - Jump On"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/game2" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:background="#FFF"
            android:gravity="bottom"
            android:paddingBottom="6dp"
            android:paddingLeft="3dp"
            android:text="Spellfall - Puzzle" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/game3" />



    </RelativeLayout>
</LinearLayout>

